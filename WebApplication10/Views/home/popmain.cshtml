    <h1 class="text-center mt-5 font-weight-bold " style="color:#9ff6aa">Leave a comment </h1>
    <form class="mt-5" action="~/home/popmain" method="post">
        <div class="col-md-6 comments" style="float:left">

            <label for="fname" >First Name</label><br />
            <input type="text" style="width:300px;" id="fname" name="fname"><br />
            <label for="lname">Last Name</label><br />
            <input type="text" style="width:300px;" id="lname" name="lname"><br />
        </div>
        <div class="col-md-6 comments" style="float:left">

            <label for="lname" style="float:left;margin-top:100px; font-size:18px;">Your Comment</label><br />
            <textarea rows="7" style="float:left" cols="50" class="ml-5" id="comment" name="comment"></textarea><br />
            <button class="button">Submit</button>
        </div>
    </form>
    <div class="commentplace">
        <h1 class="comm">Comments</h1>
        @foreach (var item in ViewBag.comm.Rows)
        {
            <div class="percom">
                <span class="comname">@item[1]</span>
                <span class="comname">@item[2] :</span>
                <p class="comtext">@item[3]</p>
            </div>
        }
    </div>
