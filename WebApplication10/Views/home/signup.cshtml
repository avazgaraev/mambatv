<body style="background: #C5E1A5">
    <form class="dere" action="~/home/signup" method="post">
        <label>
            <p class="label-txt">ENTER YOUR EMAIL*</p>
        </label>
        <input type="email" required name="email" class="input derein">
        <div class="line-box">
            <div class="line"></div>
        </div>
        <label>
            <p class="label-txt">ENTER YOUR NAME*</p>
        </label>
        <input name="ad" required class="input derein">
        <div class="line-box">
            <div class="line"></div>
        </div>
        <label>
            <p class="label-txt">ENTER YOUR PASSWORD*</p>
        </label>
        <input name="password" required class="input derein">
        <div class="line-box">
            <div class="line"></div>
        </div>


        <button class="submit mt-5" type="submit">submit</button>

    </form>
</body>
</html>
